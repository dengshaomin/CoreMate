<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="本框架的资源都以'core_'打头，包含动画、颜色和drawable等，都是十分基础的资源。" />

        <Button
            android:id="@+id/button_dlg_res_anim_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/core_sl_holo_blue_darker"
            android:text="随机动画"
            android:textColor="@color/core_white" />

        <Button
            android:id="@+id/button_dlg_res_anim_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/core_sl_holo_red_darker"
            android:text="随机动画"
            android:textColor="@color/core_white" />

        <Button
            android:id="@+id/button_dlg_res_anim_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/core_sl_holo_orange_darker"
            android:text="随机动画"
            android:textColor="@color/core_white" />

        <Button
            android:id="@+id/button_dlg_res_anim_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/core_sl_holo_green_darker"
            android:text="随机动画"
            android:textColor="@color/core_white" />

        <Button
            android:id="@+id/button_dlg_res_anim_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/core_sl_darker"
            android:text="随机动画" />


    </LinearLayout>
</ScrollView>